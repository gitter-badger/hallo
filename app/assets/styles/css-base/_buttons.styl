$button
  @extend $text-regular
  background transparent
  border remify(1.2px) solid $grayLight
  border-radius remify(2px)
  color $black
  cursor pointer
  display inline-block
  line-height 2rem
  text-align center
  text-decoration none
  width 100%
  &:hover, &:focus, &:active
    border-color $purple
    color $purple
  &-small
    @extend $button
    @extend $text-small
    line-height remify(40px)
  &-regular
    @extend $button
    line-height remify(48px)
  &-big
    @extend $button
    @extend $text-big
    line-height remify(56px)
  &.gray
    background $grayLighter
    border-color $gray
    color $black
  &-green
    @extend $button
    background $green
    border-color $green
    color $white
  &.black
    background $black
    border-color $black
    color $white
  &.inactive
    background rgba($black, 0.14)
    border-color rgba($black, 0.14)
    color $white

button.basic, .button.basic
  display block
  min-width remify(228px)
  height remify(50px)
  background-color $white
  border remify(1.2px) solid $black
  border-radius remify(2px)
  padding 0 remify(40px)
  font-size remify(16px)
  font-family $fontTextRegular
  line-height remify(50px)
  text-align center
  color inherit
  cursor pointer

button.filled, .button.filled
  height remify(50px)
  background-color $orangeLight
  border-left: remify(3px) solid transparent
  border-right: remify(3px) solid transparent
  border-top: remify(2px) solid transparent
  border-bottom: remify(3px) solid $orange
  border-radius remify(3px)
  font-size remify(16px)
  text-align center
  text-decoration none
  color $black
  padding: remify(10px) remify(30px)
  +below('s')
    position fixed
    bottom 0
    left 0
    display block
    width 100%
    height remify(62px)
    border-radius 0
    padding: remify(10px) remify(30px)
  +above('l')
    display inline-block
    width remify(138px)
  +above('xl')
    width remify(170px)
  &:hover
    border-bottom remify(3px) solid transparent
  &:active
    border-top remify(3px) solid $orange
    border-bottom remify(2px) solid transparent
