$tablePaddingVertical = 2.5rem;
$tablePaddingHorizontal = 1.5625rem;

table
  width: 100%
  // border-top: 0.08rem solid $black
  border-bottom: 0.08rem solid $black

  caption
    display none

  tr
    &.hardline
      td, th
        padding: 0 0.9375rem // 15px
        border-top: 0.08rem solid $black

    &.hover
      cursor pointer
      background-color $grayLighter
      input[type="radio"]
        &:before
          border-color: $green

    &.selected, &.selected.hover
      background-color $grayLighter

    td, th
      position: relative
      display: table-cell !important
      padding: 0.625rem // 10px
      float: none !important
      vertical-align: middle
      font-weight: normal
      &.left
        text-align: left
      &.right
        text-align: right
      &.hardline
        border-top: 0.08rem solid $black

  thead
    width: 100%
    border-bottom: 0.08rem solid $grayLight
    th
      position: relative
      text-align: center
      .hashtag
        position: absolute
        bottom: 0
        margin-bottom: -(1.3125rem/2)
        left: 50%
        margin-left: -(3.9375rem/2)
        &:after, &:before
          content " "
          position absolute
          top 50%
          display block
          width remify(10px)
          height remify(2.6px)
          margin-top remify(-1.2px)
          background-color $white
        &:after
          left 100%
        &:before
          right 100%

      .icon
        display: inline-block
        width: 2rem
        height: 2rem
      .subtitle
        @extends .clearfix
        position: relative
        display inline-block
        width 100%

      // &:last-child
      //   padding-right: 0
      // &:first-child
      //   padding-left: 0

  tbody
    width: 100%
    tr
      &:first-child
        td
          border-top: none
      td
        position: relative
        height: auto
        border-top: 0.08rem dashed $grayLight
        text-align: center
        // &:last-child
        //   padding-right: 0
        // &:first-child
        //   padding-left: 0

        .left-bracer
          position: absolute
          top: 0;
          right: 1rem
          width: 1.6875rem
          height: 100%
          padding: 3rem 1.5625rem

          .inner
            position: relative
            top: 0
            left: 0
            width: 1.6875rem
            height: 100%
            border-top: 0.08rem solid $grayLight
            border-left: 0.08rem solid $grayLight
            border-bottom: 0.08rem solid $grayLight

        fieldset
          input[type="radio"]
            display: inline-block
            width: 1.5075rem
            float: left

        i.icon_check
          position: relative
          display: inline-block
          width: 100%
          min-height: 0.6875rem // 11px
          font-size: 0.8125rem
          svg
            position: absolute
            top: 0
            left: 50%
            display: block
            width: 1rem // 16px
            height: 1rem // 16px
            margin-left: -0.75rem // -12px
          small
            position: relative
            top 1rem // 16px
            left 0
            display inline-block
            width: 100%
            white-space: nowrap
            color: $gray

        .promo
          position absolute
          top remify(-10px)
          left remify(60px)
          display block
          width remify(50px)
          height remify(50px)
          background-color $orangeLight
          border-radius 100%
          font-size remify(11px)
          padding remify(13px) 0
          line-height remify(12px)
          color $black
          transform rotate(-30deg)

table.modal-table
  border-top remify(1px) solid $black
  margin remify(20px) 0 remify(70px) 0
  th
    padding remify(30px) remify(20px)
  .oi-price
    +below('xs')
      padding-top remify(7px)
    +above('xs')
      padding-top remify(38px)


table.checkout
  thead
    tr
      th
        padding: $tablePaddingVertical 0

  tbody
    tr
      td
        font-size: 0.8125rem
        padding: $tablePaddingVertical*0.34 0

