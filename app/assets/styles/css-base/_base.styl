html
  font-size 16px
  +above('xxxl')
    font-size 1vw

body
  font-family font-stack( 'Helvetica' )
  font-size 1rem
  line-height 1.4
  opacity 1
  color $black

  .only-l
    display none
    +above('l')
      display block

.container
  background-color #fff

$visuallyhidden
  position absolute
  overflow hidden
  clip rect(0 0 0 0)
  height 1px
  width 1px
  margin -1px
  padding 0
  border 0

