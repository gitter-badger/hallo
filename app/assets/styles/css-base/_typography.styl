font-face( "oiTextRegular", "../fonts/simplon/SimplonBP-Regular-webfont", normal )
font-face( "oiTextBold", "../fonts/simplon/SimplonBP-Bold-webfont", normal )
font-face( "oiTextLight", "../fonts/simplon/SimplonBP-Light-webfont", normal )
font-face( "oiTitle", "../fonts/simplon/SimplonOi-headline-webfont", normal )

$fontTitle = oiTitle, sans-serif
$fontTextRegular = oiTextRegular, sans-serif
$fontTextBold = oiTextBold, sans-serif
$fontTextLight = oiTextLight, sans-serif

$baseline  = .625rem // 10px

.container
  font-family oiText, sans-serif
  set-font-size(21px)

$line-height
  &-small
    line-height remify(16px)
  &-regular
    line-height remify(20px)
  &-big
    line-height remify(30px)

$title
  font-family $fontTitle
  color green
  text-transform uppercase
  display block
  &-huge
    @extend $title
    set-font-size(112px)
    // line-height 8rem
  &-big
    @extend $title
    set-font-size(85px)
    // line-height 6rem
  &-medium
    @extend $title
    set-font-size(57px)
    // line-height 4rem
  &-small
    @extend $title
    set-font-size(42px)
    // line-height 3rem
  &-tiny
    @extend $title
    set-font-size(28px)
    // line-height 2rem
  &-eyebrow
    @extend $title
    set-font-size(14px)
    // line-height 1rem

$headline
  font-family $fontTextRegular
  &-big
    @extend $headline
    set-font-size(55px)
    // line-height 4rem
  &-regular
    @extend $headline
    set-font-size(35px)
    // line-height 3rem
  &-small
    @extend $headline
    set-font-size(21px)
    // line-height 3rem

$text
  @extend $line-height-regular
  font-family $fontTextRegular
  &-big
    @extend $text
    set-font-size(21px)
  &-regular
    @extend $text
    set-font-size(16px)
  &-small
    @extend $text
    set-font-size(13px)
  &-bold-small
    @extend $text
    font-family $fontTextBold
    set-font-size(13px)

