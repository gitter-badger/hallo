@import "../_partials/_base.styl"

// Page Components
@import "../_partials/_structure.styl"
@import "../_partials/_content.styl"
@import "../_partials/_content-header.styl"

.content_table
  overflow hidden
  &_container
    max-width remify(1170px)
    margin 0 auto

.table-compare
  border none
  border-bottom 1px solid $black
  font-family $fontTextRegular
  text-align center
  width 100%
  min-width remify(760px)

  caption
    display none

  thead
    tr
      border-bottom 1px solid $gray

  tbody
    tr
      border-bottom 1px dashed $gray

  tr
    height remify(90px)

  th
    height remify(90px)
    vertical-align middle
    padding 0 7%
    position relative

  td
    height remify(90px)
    vertical-align middle
    font-weight 600
    position relative
    &.opt
      width remify(210px)

  .promo
    background-color $orangeLight
    border-radius 100%
    width remify(50px)
    height remify(50px)
    display block
    position absolute
    top remify(-10px)
    left remify(60px)
    color $black
    font-size remify(11px)
    padding remify(13px) 0
    line-height remify(12px)
    transform rotate(-25deg)

  .bold
    font-family $fontTextBold

  .tag
    background-color $green
    border-radius remify(2px)
    font-weight 500
    color $white
    display inline-block
    height remify(20px)
    line-height remify(20px)
    font-size remify(13px)
    padding 0 remify(10px)
    text-transform lowercase

  svg
    width remify(25px)
    margin 0 remify(5px) 0 0
    display inline-block
    cursor pointer
    position absolute
    top remify(21px)
    left remify(25px)
    circle
      stroke $green
      &.icon-inner
        stroke $white
        fill $white
      &.icon-outer
        stroke $grayLight
    &:hover
      circle.icon-inner
        fill $green

  oi-price
    display inline-block
    height remify(90px)
    position absolute
    top remify(28px)
    left remify(90px)

.content_addons
  margin 0 auto
  max-width remify(1170px)
  overflow hidden
  padding remify(60px) 0
  // fix cagada do gaspar (top -130)
  margin-top remify(130px)
  &_container
    background-color $grayLighter

.addons
  color $black
  overflow hidden
  &_title
    font-size remify(21px)
    font-family $fontTextLight
    width 25%
    float left
    display block
    text-transform uppercase
  &_list
    width 75%
    float left
    text-align center
    ul
      display block
      width 100%
      overflow hidden
  &_item
    width 33%
    float left
    padding 0 5%
    // copiando odd do gaspar
    &_img
      height remify(50px)
      margin-bottom remify(20px)
      background-repeat no-repeat
      background-position center
      &.img1
        background-image url(/assets/images/layout/fixo1.png)
      &.img2
        background-image url(/assets/images/layout/fixo2.png)
      &.img3
        background-image url(/assets/images/layout/fixo3.png)
    &_title
      font-size remify(15.97px)
      margin-bottom  remify(20px)
    &_desc
      font-size remify(10.98px)
      margin-bottom  remify(20px)
      color $gray
    &_actions
      overflow hidden
      position relative
      button
        cursor pointer
        height remify(50px)
        width 100%
        display block
        &.add
          border 1px solid $grayLight
          background-color $grayLighter
          border-radius remify(2px)
          position relative
          z-index 2
          &.add-1-3
            width (100% / 3)
            float left
            & + .add-1-3
              border-left-color transparent
              &:hover, &:focus, &:active
                border-color $purple
          &:hover, &:focus, &:active
            border-color $purple
            color $purple
            outline none
        &.rem
          border none
          color $gray
          background-color transparent
          position relative
          z-index 1
          opacity 0
          position absolute
          width 100%
          top 0
          left 0
          transition all .4s linear
          &:hover, &:focus, &:active
            outline none
        &.added
          background-color $greenLight
          border-color $greenLight
          color $white
          & + .rem
            top remify(50px)
            opacity 1

      span
        display block
        &.call
          font-size remify(12.98px)
        &.price
          font-size remify(10.98px)
          color $gray
