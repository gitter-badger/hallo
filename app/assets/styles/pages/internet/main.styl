@import "../_partials/_base.styl"

// Page Components
@import "components/_alert-box.styl"

// Page partials
@import "../_partials/_structure.styl"
@import "../_partials/_cards.styl"
@import "../_partials/_content.styl"
@import "../_partials/_content-header.styl"
@import "../_partials/_content-table.styl"
@import "../_partials/_product-cheat-sheet.styl"

body >header
  +above('m')
    margin-bottom: remify(-271px)

.oi-header_title
  +above('m')
    margin-top: remify(57px)

.oi-header_client-type
  +above('m')
    display block
    margin-top remify(57px)

body
  >main
    background-color $green
    .cards
      .cards_container
        .cards_container_box
          max-width: remify(780px)
          oi-card
            width: (100/2)%
            +below('xs')
              width 50%
    .cards.open
      .cards_container
        .cards_container_box
          max-width: 100%


    .content

      .content_header_container
        +below('xs')
          display none
        .content_header_list
          max-width 60%
        .content_header_sidewalk
          max-width 40%
        .content_header_action
          margin-left remify(30px)
          width auto
          .content_header_action_box a
            min-width rem(170px)

      .content_table_container
        .content_table
          padding-bottom remify(90px)
          top 0


.oi-banda-larga,
.oi-internet-movel,
.oi-banda-larga-mais-fixo
  margin: 0 auto
  width 100%




.oi-banda-larga_table,
.oi-banda-larga-mais-fixo_table
  position: relative
  display table
  width 100%
  max-width rem(1170px)
  margin 0 auto
  table
    thead tr th
      height: remify(70px)
    tbody tr td
      height: remify(110px)
      // fieldset
      //   oi-price
      //     +below('xs')
      //       left: rem(-10px)


.oi-banda-larga-mais-fixo_table
  table thead tr th
    height: remify(120px)
    +below('s')
      height: remify(140px)


.oi-banda-larga_table_heading,
.oi-banda-larga-mais-fixo_table_heading
  @extend .clearfix
  position: absolute
  display inline-block
  width: 26%
  vertical-align: top
  background-color: $white
  z-index: 1
  +below('xs')
    width: rem(130px)
    border-right: 1px solid $grayLight


  table:after
    +below('xs')
      content: " ";
      display: block;
      position: absolute;
      height: 100%;
      width: 3px;
      top: 0;
      right: -3px;
      background-color: rgba(0,0,0,0.05);

  table tbody tr td oi-price
    pointer-events: none
    height: remify(24px)
    +below('xs')
      left rem(-14px)
  table tbody tr td fieldset input[type="radio"]
    +below('xs')
      transform: scale(0.89)
      transform-origin: 50% 50%

// .oi-banda-larga-mais-fixo_table_heading
//   width: 18%

.oi-banda-larga_table_scroll,
.oi-banda-larga-mais-fixo_table_scroll
  @extend .clearfix
  position: relative
  left: 26%
  display inline-block
  width: 74%
  vertical-align: top
  z-index: 0
  table tbody tr td
    width: (100/3)%

  +below('xs')
    width: s('calc(100vw - '+rem(130px)+')')
    left: rem(130px)
    overflow-x: scroll
    table
      width: s('calc(41vw * 3)')

// .oi-banda-larga-mais-fixo_table_scroll
//   left: 18%
//   width: 82%


.oi-banda-larga_table_footer,
.oi-banda-larga-mais-fixo_table_footer
  @extend $container
  width 100%
  height remify(70px)

  div
    padding: rem(24px) 0
    +below('xs')
      @extend $col-6-6
    +above('s')
      @extend $col-12-12



.oi-banda-larga_ficha-tecnica,
.oi-banda-larga-mais-fixo_ficha-tecnica
  +above('m')
    padding-top: remify(130px)

.oi-banda-larga_ficha-tecnica
  +above('m')
    background-image: url(/assets/images/layout/img-background-banda-larga.png)
    background-repeat: no-repeat;
    background-size: rem(469px) auto;
    background-position: 100% 34%;



.oi-banda-larga-mais-fixo_table_scroll
  table tbody tr td
    width: (100/5)%

  +below('xs')
    width: 60vw
    left: 40vw
    overflow-x: scroll
    table
      width: remify(185px*3)
      tbody tr td
        width: remify(185px)
