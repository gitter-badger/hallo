@import "../_partials/_base.styl"

// Page Components
@import "../_partials/_structure.styl"
@import "../_partials/_cards.styl"
@import "../_partials/_content.styl"
@import "../_partials/_content-header.styl"
@import "../_partials/_content-table.styl"


body
  +above('m')
    &.white-background
      background-color white

body >header
    position relative
    min-height remify(370px)
    height 100vh
    max-height remify(768px)
    margin-bottom -($cardSizeMobile)
    +above('m')
      margin-bottom remify(-64px)
    +below('m')
      max-height: 65rem;
