.testeCont
  display  none
  position fixed
  height 100vh
  border 1px solid red
  width 1200px
  top 0
  left s("calc((100vw - 1200px)/2)")
  margin 0 auto
  z-index 99999
  pointer-events none
  .colLeft
    border-right 1px solid red
    height 100vh
    width 30%

.scrollmagic-pin-spacer
  pointer-events none

*
  -webkit-backface-visibility hidden

$column-container-left
  float right
  +above('l')
    width (1200px / 2 - 115px)
    // margin-right remify(115px)


$column-container-right
  float left
  +above('l')
    width (1200px / 2 - 115px)
    // margin-right remify(115px)

.minha-oi
  .menu
    background-color $green
    center

  header
    // padding-top remify(60px)
    overflow hidden
    height remify(320px)
    +above('l')
      center(1200px)

    .pre-title
      @extend $text-regular
      margin-top remify(60px)
      color $gray
      overflow hidden
      h2
        float left
      p
        float right
      a
        color inherit
        text-decoration underline

    h1
      @extend $title-big
      color $black
      padding-bottom remify(120px)

  main.content
    width 100%
    display block
    overflow hidden
    position relative

  .column
    width 50%
    float left
    margin-bottom remify(120px)

    .column-container
      float right
    & + .column
      padding-right 0
      float left
      .column-container
        float left

  .column-container
    width 100%

  .column-title
    overflow hidden
    margin-right remify(115px)
    h2
      @extend $column-container-left
      @extend $headline-big
      font-size 45px
      margin-bottom remify(65px)

  .customer-service-nav
    margin-right remify(115px)
    li
      height remify(60px)
      line-height remify(60px)
      overflow hidden
    a
      @extend $column-container-left
      @extend $text-regular
      color $black
      display inline-block
      text-decoration none
    svg
      height 23px

  .search-faq
    height remify(150px)
    line-height remify(150px)
    border-top 1px solid $grayLight
    border-bottom 1px solid $grayLight
    margin-right remify(115px)
    fieldset
      @extend $column-container-left
      margin-right 0
    label
      display inline-block
      span
        @extend $visuallyhidden
    svg
      width remify(17px)
      display inline-block
      transform translateY(remify(4px))
    input
      @extend $text-regular
      background-color transparent
      border none
      display inline-block
      line-height remify(30px)
      width remify(320px)
      &:focus
        outline none
        border-bottom 1px solid $black

    select
      @extend $text-regular
      appearance none
      background-color transparent
      border none
      display inline-block
      float right
      line-height remify(32px)
      height remify(32px)
      padding 0  remify(15px)
      text-align right
      transform translate(0, remify(11px))
      background-image url(/assets/images/icons/arrow.svg)
      background-repeat no-repeat
      background-size remify(10px)
      background-position right center
      border-radius 0


  .customer-service-links
    clear both
    li
      border-bottom 1px solid $grayLight
      line-height remify(150px)
      overflow hidden
      margin-right remify(115px)
      &:last-child
        border-bottom 1px solid $white
    a
      @extend $column-container-left
      color $black
      text-decoration none
      &.hasimg
        background-repeat no-repeat
        background-position left center
        padding-left remify(200px)
      &.is-link
        color $green

  .main-content
    .column-container
      background-color $grayLighter
      // background-image linear-gradient(0%, $white 0%, $grayLighter 20%, $grayLighter 70%, $white 80%)
      background-image linear-gradient(0%, $white 0%, $grayLighter 20%, $grayLighter 70%, $white 86%)

  .side-content

    .column-title h2
      float left
      margin-bottom 0
      position relative
      z-index 3

    .bt-back
      @extend $text-regular
      background-color $green
      border 0px
      color $white
      cursor pointer
      display block
      height remify(70px)
      line-height remify(70px)
      width 100%
      height 0
      padding 0
      svg
        height 18px
        width 18px
        display inline-block
        vertical-align text-bottom
        line, polyline
          stroke $white
          stroke-width 5px

    .banner-image
      background-image url(/assets/images/demo/minha-oi-tv-hd.png)
      background-repeat no-repeat
      // background-position remify(80px) remify(50px)
      background-position remify(50px) 0
      width remify(600px)
      margin-top -20px
      height remify( 240px + 150px + 63px + 20px + 23px)
      position relative
      z-index 2
      pointer-events none
      transition opacity 300ms ease-in-out
      background-size contain
      background-size 80%

  .addons
    position relative
    z-index 1
    margin-top -23px
    transition all 300ms ease-in-out


    li
      line-height remify(150px)
      height remify(151px)
      margin-left remify(115px)
      border-bottom 1px solid $grayLight
      background-color $white
      transition all 300ms ease-in-out
      &:last-child
        border-color $black
    a
      @extend $column-container-right
      color $black
      line-height remify(150px)
      height remify(150px)
      display block
      text-decoration none
      background-position left center
      background-repeat no-repeat
      background-size
      transition color 300ms ease-in-out
      &.active
        color $white

      span.channel-name
        @extend $visuallyhidden

    .price-widget
      float right

  .rent-list

    h2
      @extend $headline-big
      font-size remify(45px)
      line-height remify(151px)
      height remify(151px)

    ul > li
      height remify(151px)
      overflow hidden
      &:last-child a > div
        border-bottom none

    a
      font-family $fontTextRegular
      display block
      height remify(150px)
      background-repeat no-repeat
      background-position 0 center
      padding-left remify(110px)

      & > div
        height remify(150px)
        border-bottom 1px solid $grayLight
        // line-height remify(150px)

        & > div
          height remify(150px)
          vertical-align middle
          display table-cell
          position relative
          +above('l')
            width (1200px / 2 - 115px - 110px)

    .movie-title
      display block

    .availability
      display block
      li
        display inline-block
        color $white
        border-radius remify(3px)
        font-size remify(11px)
        height remify(18px)
        line-height remify(18px)
        padding 0 remify(5px)
        font-family $fontTextRegular
        &.availability-oifilmes
          background-color $purple
        &.availability-vod
          background-color $purpleLight

    .price-widget
      position absolute
      top remify(45px)
      right 0

  footer
    background-color $grayLighter

  .hidden-content
    float left
    width 0
    // height 2000px
    background-color #000
    background-image url(/assets/images/demo/hbo-demo.png)
    background-position center top
    background-repeat no-repeat
    // background-size cover
    &.fix
      right 0 !important
      margin 0 !important
      left auto !important
    .hidden-content-container
      // height 2000px
      width 840px
      box-shadow inset 0px -15px 10px 10px #000

  &.locked

    .column-title
      margin 30px 0 30px 0

    h2
      font-size remify(36px)

    .addons
      margin-top 0
      li
        margin-left 0
        a
          text-indent remify(90px)
      a
        width 360px

    .price-widget
      display none

.channel-info
  padding remify(290px) remify(90px) remify(290px) remify(170px)
  @extend $text-regular
  color $white
  .title
    @extend $title-tiny
    color $white
    font-size remify(55px)
    height remify(60px)
    line-height remify(60px)
  .call
    height remify(60px)
    line-height remify(60px)
    color $white
    text-decoration none
    border 1px solid $gray
    border-radius remify(3px)
    display inline-block
    margin-top remify(10px)
    padding 0 remify(25px)
    .number
      font-family $fontTextBold
      display inline-block
      margin-right remify(10px)
      font-size remify(21px)
  .subtitle
    margin-top remify(85px)
    margin-bottom remify(50px)
    font-size remify(16px) !important
  .desc
    margin-bottom remify(100px)
    p
      margin-bottom remify(25px)
      line-height remify(22px)
  .title-list
    margin-bottom (50px)
    font-size remify(16px) !important
  .list-channels
    overflow hidden
    margin-bottom remify(90px)
    margin-top remify(50px)
    display block
    li
      float left
      height remify(30px)
      line-height remify(15px)
      padding remify(20px) 0
      font-size 13px
      border-bottom 1px dashed $gray
      display block
      width 41%
      margin-right 9%
      span
        display block
        text-align right
  .title-avaliable
    margin-bottom remify(40px)
    font-size remify(16px) !important
  .list-avaliable
    margin-bottom remify(90px)
    li
      height remify(30px)
      line-height remify(30px)
    a
      color $white
      text-decoration underline
  .sign-now
    margin-bottom remify(140px)
    a
      color $white
      text-decoration underline


