.product-cheat-sheet
  max-width: remify(1170px);

.product-cheat-sheet_row
  @extend .clearfix

.product-cheat-sheet_column-left
  @extend .clearfix
  float: left
  width: remify(200px)

.product-cheat-sheet_column-right
  @extend .clearfix
  float: left
  width: remify(970px)

  h2
    font-family: $fontTitle
    font-size: remify(21px)

  dl
    position: relative
    width: remify(440px)
    padding-left: remify(130px)
    dt
      position: absolute
      top: 0
      left: 0
      width: remify(130px)
      height: auto
      font-family: $fontTextBold
    dd
      width: 100%
      padding-bottom: 0.89em
      font-size: remify(13px)
      line-height: 1em
