.product-cheat-sheet
  max-width: remify(1170px);

.product-cheat-sheet_row
  @extend .clearfix

.product-cheat-sheet_column-left
  @extend .clearfix
  float: left
  width: remify(200px)
  padding-right: remify(30px)

  h2
    font-family: $fontTitle
    font-size: remify(21px)


.product-cheat-sheet_column-right
  @extend .clearfix
  float: left
  width: remify(970px)


.product-cheat-sheet_data-list
  dl
    position: relative
    width: remify(480px)
    padding-left: remify(130px)
    padding-bottom: 0.89em
    font-size: remify(13px)
    dt
      position: absolute
      top: 0
      left: 0
      width: remify(130px)
      height: auto
      font-family: $fontTextBold
      line-height: 1.34em
    dd
      width: 100%
      padding-bottom: 0.55em
      line-height: 1.34em


.product-cheat-sheet_app-list
  h5
    padding-bottom: remify(30px)
    font-family: $fontTextBold
    font-size: remify(13px)

  ul
    li
      width: remify(70px)
      height: remify(190px)
      margin-right: 30px
      float: left
      font-size: remify(11px)
      em
        display: inline-block
        font-style: italic
        color: $gray
