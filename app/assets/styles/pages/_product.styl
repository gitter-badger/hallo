.product
  background-image url(tv.jpg)
  background-repeat no-repeat
  background-position center 0
  position relative

  height 5000px

  .simule
    background-color rgba(red, 0.14)
    height remify(70px)
    position relative
    z-index 2

  .hero
    absoluteTopLeft(remify(70px))
    background-color rgba(green, 0.3)
    height remify(625px)
    overflow hidden
    width 100%
    z-index 1
    img
      display none

  .menu
    // background-color rgba(purple, 0.4)
    height remify(70px)
    position relative
    z-index 2

  header
    center(1200px)
    // background-color rgba(red, 0.14)
    height 57vh
    max-height remify(518px)
    min-height remify(250px)
    position relative
    z-index 2
    h1
      @extend $title-huge
      color $white
      word-spacing -7px
      margin remify(34px) 0 0 remify(14px)

  .cards
    center(1170px)
    text-align center
    background-color rgba(red, 0.3)
    position relative
    z-index 2
    .card
      width s('calc( 100% / 3 )')

  .channels-area
    background-color $green
    padding remify(10px)
    margin-top remify(193px)
    margin-bottom 2px
    opacity .5

    .channels-choose
      center(100%)
      li
        column(1/3)
      a
        @extend $text-regular
        background-color $white
        color $green
        display block
        line-height remify(49px)
        text-align center
        text-decoration none
        &.active
          color $white
          background-color $green

    .channels-header
      background-color $white
      padding remify(40px) remify(42px)
      word-spacing remify(-2px, 5px, 8px)

      li
        @extend $title-small
        circleSeparator(11px)
        display inline-block
