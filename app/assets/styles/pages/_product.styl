.product
  background-image url(tv.jpg)
  background-position center 0
  background-repeat no-repeat
  position relative

  height 7000px

.simule
  background-color rgba(red, 0.14)
  height remify(70px)
  position relative
  z-index 2

.menu
  background-color rgba(purple, 0.4)
  height remify(70px)
  position relative
  z-index 2

.hero
  absoluteTopLeft(remify(70px))
  // background-color rgba(green, 0.3)
  height remify(625px)
  overflow hidden
  width 100%
  z-index 1
  img
    // display none
    width 100%

header
  center( remify(1200px))
  // background-color rgba(red, 0.14)
  height 64.3vh
  max-height remify(518px)
  min-height remify(250px)
  position relative
  z-index 2
  h1
    @extend $title-huge
    color $white
    margin remify(34px) 0 0 remify(14px)
    word-spacing remify(-7px)

.cards
  center( remify(1170px))
  background-color rgba(red, 0.3)
  position relative
  text-align center
  z-index 2
  .card
    width s('calc( 100% / 3 )')

.channels-area
  center( remify(1366px) )
  background-color $green
  margin-bottom remify(2px)
  margin-top remify(193px)
  padding remify(10px)
  opacity .7

.channels-choose
  li
    col(1/3, gutter: 1)
  a
    @extend $text-regular
    background-color $white
    color $green
    display block
    line-height remify(49px)
    text-align center
    text-decoration none
    &.active
      background-color $green
      color $white
      cursor default

.channels-header
  background-color $white
  border-top remify(1px) solid $green
  overflow hidden
  padding remify(40px) remify(42px) remify(34px)
  word-spacing remify(-2px)
  ul
    center( remify(1170px) )
  li
    @extend $title-small
    circleSeparator(11px, 8px, 14px)
    color $black
    display inline-block
    letter-spacing remify(-1px)

.channels-list-area
  background-color $white

.channels-container
  center( remify(1170px) )
  background-color $grayLighter
  border-bottom remify(1px) solid $gray

.channels-lists
  column(9/12, gutter: 0)
  background-color $white
  width 77%

.channels-tv
  margin-bottom remify(60px)
  overflow hidden

h4
  @extend $text-regular
  line-height remify(71px)
  text-align center
  border-bottom remify(1px) solid $grayLight
  text-indent remify(-29px)

.channels-pack
  width s('calc(100% / 6)')
  float left

  li
    @extend $text-regular
    size(remify(120px), remify(112px))
    color $gray
    display block
    font-size remify(12px)
    margin 0 remify(4px) 0
    margin-right remify(30px)
    padding-top remify(30px)
    text-align center
    white-space nowrap
  span
    display block
    // margin-top remify(-9px)
    white-space initial
    font-size remify(11px)
    transform translateY(-50%)
    line-height remify(13px)
  img
    display inline-block
    width remify(112px)

.channels-audio, .channels-radio
  background-color $white
  margin-bottom remify(36px)
  padding-right remify(110px)
  h5
    @extend $text-bold-small
    font-weight 500
    margin-bottom remify(6px)
  li
    @extend $line-height-regular
    @extend $text-small
    display inline-block
    &:after
      content: ', '
    &:last-child
      &:after
        content: '.'

.channels-radio
  margin-bottom remify(56px)

.channels-optionals
  background-color $grayLighter
  column(3/12)
  width 23%
  margin-right 0

  h4
    text-indent 0
  li
    @extend $text-small
    height remify(221px)
    border-bottom remify(1px) solid $grayLight
    color $gray
    margin-bottom remify(3px)
    padding remify(25px) 0
    text-align center
    &:last-child
      border-bottom 0
  img
    display inline-block
    width remify(112px)
  span
    @extend $line-height-small
    display block
    height remify(65px)
    margin-top remify(-5px)
    & + span
      margin-top remify(13px)
  a
    @extend $button-small
    width 64%

    &.spot
      width remify(35px)
      margin-right remify(4px)
      transition all .25s easing( "in-quad" )
      &:last-child
        margin-right 0
      &.selected, &:hover
        background-color $green
        border-color $green
        color $white
  h5
    @extend $text-regular
    margin-top remify(21px)

    & + span
      margin remify(11px) remify(40px) 0

.channels-area-footer
  center( remify(1170px) )

.channels-help
  @extend $line-height-regular
  @extend $text-regular
  overflow hidden
  hidden remify(30px)
  padding-top remify(25px)
  .channels-search
    column(77/100, gutter: 0)
    display block
  .channels-faq
    column(23/100, gutter: 0)
    text-align right
  a
    color $green
    text-decoration none

.channels-img-bottom
  width 100%
  display block
  margin-top remify(162px)

.channels-detail-area
  border-bottom 1px solid $grayLight
  margin-top remify(67px)
  padding-bottom remify(60px)
  overflow hidden

.channel-detail
  border-top 1px solid $grayLight
  column(1/4)
  color $black
  h5
    @extend $title-eyebrow
    color $black
    line-height remify(50px)
  ul
    margin-top remify(32px)
  li
    margin-bottom remify(30px)
    padding-right remify(30px)
    ul
      margin-top 0
      li
        line-height remify(17px)
        margin-bottom 0
        padding-right 0
        a
          @extend $text-small
          @extend $line-height-small
          color $green
          text-decoration none
  .has-image
    position relative
    height  remify(100px)
    margin-bottom  remify(7px)
    padding  remify(19px) 0 0  remify(89px)

  .detail-img
    absoluteTopLeft()
    size( remify(70px),  remify(100px))
    overflow hidden

  .detail-title
    @extend $text-bold-small
    // @extend $line-height-small
    display block

  .detail-desc
    @extend $text-small
    @extend $line-height-small
    display block

  .detail-tooltip
    @extend $text-small
    @extend $line-height-small
    border remify(1px) solid $black
    border-radius remify(2px)
    background-color $white
    display inline-block
    line-height remify(19px)
    margin 0 0 0 remify(14px)
    padding 0 remify(6px)
    transform translateY( remify(-2px))
    position relative
    &:before
      square(0)
      absoluteTopLeft( remify(5px), remify(-10px))
      display block
      content ""
      border remify(5px) solid transparent
      border-color transparent $black transparent transparent
    &:after
      square(0)
      absoluteTopLeft( remify(5px), remify(-9px))
      display block
      content ""
      border remify(5px) solid transparent
      border-color transparent $white transparent transparent

.call-help
  @extend $text-regular
  line-height remify(146px)
  text-align center
  a
    color $green
    text-decoration none
