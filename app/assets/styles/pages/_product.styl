.cards
  overflow hidden
  margin-bottom remify(125px)
  +above('m')
    margin-bottom remify(195px)
  +above('l')
    center( remify(1170px) )
    margin-top remify(-127px)

  oi-card
    width (100% / 3)
    float left
    & + oi-card .oi-card
      border-left 0

.oi-channels
  background-color $green
  display block
  width 100%
  max-width remify(1366px)
  margin 0 auto
  overflow hidden
  +above('m')
    padding remify(10px)

  &_tabs
    ul
      border-bottom remify(1px) solid $green
      border-top remify(1px) solid $green
      display block
      overflow hidden
      +above('m')
        border-top none

    li
      display block
      float left
      height remify(60px)
      line-height remify(60px)
      text-align center
      width (100% / 3)

    a
      background-color $white
      color $green
      display block
      height 100%
      text-decoration none
      width 100%

      &.active
        color $white
        background-color $green

  &_container
    background $white

  &_lists-container
    max-width remify(1170px)
    margin 0 auto
    overflow hidden
    background-color $grayLighter

  &_header
    height remify(65px)
    padding remify(17px) remify(20px)
    background-color $white
    border-bottom remify(1px) solid $grayLight
    position relative
    max-width remify(1170px)
    margin 0 auto
    +above('m')
      padding remify(50px) remify(40px)
      height remify(130px)
    +above('l')
      padding remify(50px) remify(40px)
      border-bottom remify(1px) solid $black
    +above(1230px)
      padding remify(50px) 0


    &_list
      display none
      float left
      font-family $fontTitle
      font-size remify(42px)
      text-transform uppercase
      +above('m')
        display block
        width s("calc(100% - 140px - 80px)")
        transform translateY(remify(-12px))
      +above('l')
        width s("calc(100% - 140px - 80px - 170px - 30px)")

      ul
        display block

      li
        display inline-block
        &:first-child:before
          display none
        &:last-child
          +above('m')
            display none
          +above('l')
            display inline-block
        &:before
          content ''
          display inline-block
          width remify(12px)
          height remify(12px)
          border-radius remify(6px)
          background-color $grayLight
          transform translateY(remify(-7px))
          margin 0 remify(7px) 0 0


    &_client-type
      font-family $fontTextRegular
      width (100% / 3 * 2)
      float left
      +above('m')
        width remify(140px)
      a.oi-channels_header_client-type-trigger
        color $green
        text-decoration none
        font-size remify(13px)
        height remify(30px)
        display block
        span
          height remify(15px)
          lineheight remify(15px)
          display block
        svg
          display inline-block
          width remify(9px)
          margin-left remify(5px)
          & + span
            display inline-block
        path
          fill $green

      &_dropdow
        background-color $white
        border remify(1px) solid $gray
        border-radius remify(5px)
        display none
        font-family $fontTextRegular
        left remify(15px)
        position absolute
        top remify(55px)
        width s("calc(100% - 30px)")
        max-width remify(465px)
        +above('m')
          top remify(104px)
          right 0
          left auto
        +above('l')
          right remify(202px)

        &:before
          background $white
          border 1px solid $gray
          border-radius remify(4px)
          border-width remify(1px)  0 0 remify(1px)
          content ''
          display block
          height remify(15px)
          left remify(126px)
          position: absolute
          top remify(-6px)
          transform rotate(45deg)
          width remify(15px)
          +above('m')
            left remify(328px)

        &:after
          background $white
          content ''
          display block
          height remify(15px)
          width remify(30px)
          left remify(120px)
          position: absolute
          top remify(0)
          +above('m')
            left remify(320px)

        ul
          display block

        li
          height remify(115px)
          border-bottom remify(1px) solid $grayLight
          padding 0 remify(5px)
          position relative
          +above('m')
            padding 0 remify(40px)

          &:last-child
            border-bottom none

        a
          font-size remify(16px)
          display block
          text-decoration none
          color $black

          & > span
            transition color 0.3s ease
            width s(" calc(100% - 120px)")
            display inline-block
            line-height remify(20px)
            position absolute
            top remify(30px)
            height remify(55px)
            & > div
              display table-cell
              vertical-align middle
              height remify(55px)

          &.active, &:hover, &:focus, &:active
            & > span
              color $green
            svg circle.icon-inner
              fill $green

          svg
            width remify(25px)
            transform translateY(remify(33px))
            margin 0 remify(5px) 0 0
            circle
              stroke $green
              &.icon-inner
                stroke $white
                fill $white
              &.icon-outer
                stroke $green

        oi-price
          right remify(10px)
          width remify(80px)
          display inline-block
          position absolute
          top remify(38px)
          +above('m')
            right remify(40px)

    &_price
      width (100% / 3)
      float right
      transform translateY(remify(-5px))
      +above('m')
        float left
        width remify(80px)

    &_action
      background-color $orangeLight
      border-bottom remify(2px) solid $orange
      border-radius remify(2px)
      display none
      float left
      font-family $fontTextRegular
      font-size remify(16px)
      height remify(50px)
      line-height remify(50px)
      margin-left remify(30px)
      margin-top remify(-10px)
      text-align center
      width remify(170px)
      &:hover
        border-bottom remify(1px) solid $orange
        margin-top remify(-9px)
      +above('l')
        display block

      a
        color $black
        text-decoration none

.oi-channels-lists
  background-color $white
  font-family $fontTextRegular
  +above('l')
    // width 74.358974359%
    // margin-right 2.564102564%
    width 76.923076923%
    float left
    padding-bottom remify(120px)

  &_list-tv
    height remify(150px)
    padding remify(25px) 0 0 remify(15px)
    +above('m')
      padding remify(45px) 0 0 remify(30px)
      height remify(195px)
    +above('l')
      padding 0
      height auto
      width (100% / 6)
      float left

    &_title
      font-size remify(13px)
      height remify(15px)
      margin-bottom remify(15px)
      +above('m')
        font-size remify(16px)
        height remify(20px)
      +above('l')
        height remify(70px)
        line-height remify(70px)
        border-bottom remify(1px) solid $grayLight
        text-align center

      span
        display inline
        +above('l')
          display none

    &_container
      border-bottom remify(1px) dashed $grayLight
      height remify(97px)
      overflow scroll
      +above('m')
        height remify(115px)
      +above('l')
        overflow initial
        height auto
        border-bottom none

      ul
        display block
        width 2000px
        +above('l')
          width auto

      li
        display block
        height remify(85px)
        width remify(85px)
        float left
        text-align center
        +above('m')
          height remify(95px)
          width remify(95px)
        +above('l')
          float none
          margin 0 auto
      a
        border remify(1px) 1px solid $white
        display block
        height remify(85px)
        width remify(85px)
        text-decoration none
        color $gray
        transition all 0.3s ease
        transition-delay 0.1s
        +above('m')
          height remify(95px)
          width remify(95px)
        &:hover
          border remify(1px) 1px solid $purple
          color $purple

    &_logo
      background-repeat no-repeat
      background-position center
      width 100%
      height remify(60px)
      background-size remify(45px) auto
      position relative
      +above('m')
        height remify(70px)
        background-size remify(45px) auto

    &_name
      height remify(25px)
      line-height remify(12px)
      font-size remify(10px)
      display table-cell
      vertical-align middle
      +above('m')
        font-size remify(11px)
      div
        width remify(85px)


  &_list-audio
    height remify(170px)
    padding remify(25px) 0 0 remify(15px)
    +above('m')
      padding remify(45px) 0 0 remify(30px)
      height remify(170px)
    +above('l')
      clear both
      padding remify(50px) 0 0 remify(30px)
      height auto

    &:last-child
      .oi-channels-lists_list-audio_container
        border-bottom none

    &_title
      font-size remify(13px)
      height remify(15px)
      margin-bottom remify(15px)
      +above('m')
        font-size remify(16px)
        height remify(20px)
      span
        display inline

    &_container
      border-bottom remify(1px) dashed $grayLight
      height remify(114px)
      overflow scroll
      +above('m')
        height remify(90px)
      +above('l')
        height auto
        border-bottom none
        overflow initial

      ul
        display block
        height remify(65px)
        overflow hidden
        +above('m')
          width remify(1800px)
        +above('l')
          width auto
          height auto

      li
        display inline-block
        font-size remify(13px)
        line-height remify(20px)
        color $gray
        +above('m')
          font-size remify(16px)
        +above('l')
          font-size remify(13px)
          color $black
        &:after
          content ","

      button
        font-size remify(13px)
        background-color transparent
        color $green
        border none
        padding 0
        cursor pointer
        +above('m')
          display none

.oi-channels-addons
  border-top remify(1px) solid $grayLight
  border-bottom remify(1px) solid $grayLight
  background-color $grayLighter
  height remify(210px)
  padding remify(25px) 0 0 remify(15px)
  margin-bottom 500px
  font-family $fontTextRegular
  +above('m')
    height auto
    padding remify(45px) 0 0 remify(30px)
  +above('l')
    border none
    width 23.076923077%
    background-color $grayLighter
    height auto
    float left
    padding 0

  &_title
    font-size remify(13px)
    height remify(15px)
    margin-bottom remify(15px)
    +above('m')
      font-size remify(16px)
      height remify(20px)
    +above('l')
      height remify(70px)
      line-height remify(70px)
      border-bottom remify(1px) solid $grayLight
      text-align center

  &_container
    overflow scroll
    height remify(153px)
    +above('l')
      height auto

  &_list
    display block
    width 1500px
    +above('l')
      width auto

  &_item
    display block
    width remify(66px)
    float left
    font-size remify(10px)
    text-align center
    color $gray
    margin-right remify(24px)
    +above('m')
      width remify(120px)
      margin-right remify(34px)
    +above('l')
      height remify(260px)
      border-bottom remify(1px) solid $grayLight
      float none
      width 100%
      padding remify(40px) remify(50px) 0 remify(50px)

    &_logo
      height 40px
      background-repeat no-repeat
      background-size contain
      background-position center
      +above('l')
        margin-bottom remify(10px)

    &_desc
      font-size remify(9px)
      height remify(50px)
      padding-top remify(10px)
      line-height 15px
      +above('m')
        font-size remify(11px)
      span
        &:last-child
          display none
          +above('l')
            display block

    &_actions

      button
        background-color transparent
        border none
        cursor pointer
        display block
        font-family $fontTextRegular
        font-size remify(10px)
        height remify(17px)
        line-height remify(17px)
        transition all 0.3s ease
        width 100%
        position relative
        +above('m')
          height remify(30px)
          line-height remify(30px)
        +above('l')
          font-size remify(13px)
          height remify(40px)
          line-height remify(40px)

      .add
        background-color $grayLighter
        border remify(1px) solid $grayLight
        border-radius remify(2px)
        color $black
        svg
          position absolute
          top 10%
          left -7%
          height 80%
          opacity 0
          transition all 0.3s ease
          +above('m')
            left 9%
          polyline
            stroke $white

        &.added, &:hover, &:focus, &:active
          background-color $green
          color $white
          svg
            opacity 1

      .remove
        color $gray

