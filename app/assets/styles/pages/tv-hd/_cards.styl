.cards
  width 100%
  height $cardSizeMobile
  position relative
  z-index 2
  +above('m')
    height $cardSize

  &_container
    position relative
    width 100%
    height $cardSizeMobile
    overflow hidden
    transition-duration inherit
    transition-property border
    border 0 solid $green
    pointer-events: none
    +above('m')
      height 100vh

    &_box
      position relative
      height $cardSizeMobile
      max-width remify(1170px)
      margin 0 auto
      transition-duration inherit
      clear both
      pointer-events: none
      +above('m')
        height $cardSize

  oi-card
    width (100% / 3)
    float left
    pointer-events: initial
    border-right-width 0
    &:last-child
      border-right-width remify(1px)

.cards.open
  .cards_container
    position fixed
    top 0
  .cards_container_box
    max-width 100%
  oi-card
    border-color $green
  .oi-card_header_title
    +above('m')
      padding-top remify(6px)
  .oi-card_header_line
    +above('m')
      width: 100%
      left: 0
      background-color $green

.cards.parse
  .cards_container
    +above('m')
      border remify(10px) solid $green
  .cards_container_box
    +below('s')
      height: remify(56px)
    oi-card
      +below('m')
        height: remify(56px)
        min-height: remify(56px)
        transition-duration: 610ms
        transition-property: height
      +above('m')
        transition-duration: 0s
  .oi-card_content
    +below('s')
      display: none
  oi-card.selected
    +below('xs')
      background-color: $green
    .oi-card_header
      background-color $green
    .oi-card_header_title
      color white
    .oi-card_header_subtitle
      color $green
    oi-price
      +below('xs')
        color: $white

.cards.lock
  .cards_container_box
    oi-card
      +above('m')
        transition-duration: 610ms

.cards.fold
  .cards_container_box
    oi-card
      +above('m')
        transition-duration: 610ms
        transform: translateY(remify(-64px));
