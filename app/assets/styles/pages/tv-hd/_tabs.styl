.oi-channels
  &_tabs
    ul
      border-bottom remify(1px) solid $green
      border-top remify(1px) solid $green
      display block
      overflow hidden
      +above('m')
        border-top none

    li
      display block
      float left
      height remify(60px)
      line-height remify(60px)
      text-align center
      width (100% / 3)
      &:nth-child(0n+2)
        border-right remify(1px) solid $green
        border-left remify(1px) solid $green

    a
      background-color $white
      color $green
      display block
      height 100%
      text-decoration none
      width 100%

      &.active
        color $white
        background-color $green
