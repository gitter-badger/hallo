.oi-channels
  &_lists-container
    max-width remify(1170px)
    margin 0 auto
    overflow hidden
    width 100%
    background-color $grayLighter

.oi-channels-lists
  background-color $white
  font-family $fontTextRegular
  +above('l')
    width 76.923076923%
    float left
    padding-bottom remify(120px)

  &_list-tv
    position: relative
    height remify(154px)
    padding remify(49px) 0 0 0
    // background-image: url(../../../images/oi/canais-mobile-mask.png)
    // background-size: auto remify(154px)
    // background-repeat: no-repeat
    // background-position: left top
    +above('m')
      height remify(154px)
      padding remify(49px) 0 0 0
    +above('l')
      position: relative;
      padding 0
      width (100% / 6)
      height auto
      float left
      padding: remify(13px) remify(30px) 0 0
    &:after
      content: " ";
      +below('m')
        position: absolute;
        bottom: 0
        left: remify(30px)
        display: block
        width: 100vw
        height: 1px
        border-bottom: 1px dashed $grayLight


    &_container
      height remify(105px)
      overflow-x scroll
      overflow-y hidden
      padding-left: remify(21px)
      +above('m')
        height remify(105px)
      +above('l')
        padding: 0
        overflow auto
        height auto
        border none
        width remify(120px)
        margin 0 auto
        position: relative;

      ul
        display block
        width 2000px
        height remify(105px)
        +above('l')
          width auto
          height auto

      li
        display block
        width 26.6vw
        height remify(105px)
        float left
        text-align center
        +above('s')
          width 22vw
        +above('m')
          width 17.1vw
          height remify(105px)
        +above('l')
          float none
          width remify(120px)
          height remify(105px)
          margin 0 auto remify(26px) 0
      a
        position relative
        display block
        width remify(82px)
        height remify(105px)
        margin: 0 auto
        text-decoration none
        color $gray
        border remify(1.1px) solid transparent
        border-radius remify(2px)
        +above('m')
          width remify(120px)
          height remify(105px)
        &:hover, &:active
          +above('l')
            transition-duration: 144ms
            transition-delay: 210ms
            transition-property: border
            border remify(1.1px) solid $purple
            color $purple
        &:active
          +above('l')
            transition-duration: 0s
            transition-delay: 0s
            transform: translateY(remify(2px))
        div
          +above('m')
            display: block
            width: 100%

    &_logo
      background-repeat no-repeat
      background-position center
      width: 100%
      height: 100%
      background-size 134% auto
      background-position center 29%
      position relative
      +above('m')
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-size 100% auto
        background-position center 33%

    &_name
      position: absolute
      display: block
      width: 100%
      height: auto
      font-size remify(10px)
      bottom: remify(25px)
      +above('m')
        position: absolute
        bottom: remify(15px)
        display: block
        height: auto
        font-size remify(11px)
      div
        width 100%

  &_list-audio
    height remify(170px)
    padding remify(25px) 0 0 remify(15px)
    +above('m')
      padding remify(45px) 0 0 remify(30px)
      height remify(170px)
    +above('l')
      clear both
      padding remify(50px) remify(30px) 0 remify(30px)
      height auto

    &.open
      height auto
      .oi-channels-lists_list-audio_container
        height auto
      .oi-channels-lists_list-audio_container ul
        height auto
        padding-bottom remify(20px)

    &:last-child
      .oi-channels-lists_list-audio_container
        border-bottom none

    &_title
      font-size remify(13px)
      height remify(15px)
      margin-bottom remify(15px)
      +above('m')
        font-size remify(16px)
        height remify(20px)
      span
        display inline

    &_container
      border-bottom remify(1px) dashed $grayLight
      height remify(114px)
      +above('l')
        height auto
        border-bottom none
        overflow auto


      ul
        display block
        height remify(65px)
        overflow hidden
        padding 0 remify(15px)
        margin-left remify(-15px)
        +above('l')
          padding 0
          margin-left 0
          width remify(1800px)
          width auto
          height auto

      li
        display inline-block
        font-size remify(13px)
        line-height remify(20px)
        color $gray
        +above('m')
          font-size remify(16px)
        +above('l')
          font-size remify(13px)
          color $black
        &:after
          content ","
        &:last-child
          &:after
            content "."

      button
        font-size remify(13px)
        background-color transparent
        color $green
        border none
        padding 0
        cursor pointer
        +above('m')
          display none
