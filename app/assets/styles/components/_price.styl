oi-price
  display block
  position relative

.oi-price
  position relative
  color inherit
  display block
  height remify(44px)
  +above('m')
    height remify(110px)

  &.oi-price--small
    .oi-price_value_integer
      font-size remify(42px)
      height remify(44px)
      line-height remify(44px)
      float right
      margin-right remify(30px)
    .oi-price_value_cents
      font-size remify(21px)
      height remify(22px)
      line-height remify(22px)
      transform translate(0px, remify(-41px))
      float right
    .oi-price_suffix
      font-size remify(11px)
      height remify(22px)
      line-height remify(22px)
      // margin-top remify(-25px)
      // text-indent remify(43px)
      text-indent 0
      float right
      margin-right remify(-30px)
      width remify(31px)

  &_prefix
    position absolute;
    font-size remify(13px)
    font-family $fontTextRegular
    text-transform lowercase
    color $grayLight
    +above('m')
      width: 100%
      top: remify(4px);
      left: remify(51px);

  &_value
    position relative;
    width: 100%
    height: 100%
    margin 0 auto
    font-family $fontTitle
    text-align center

    &_integer
      position absolute;
      display inline-block
      font-size remify(35px)
      line-height remify(44px)
      text-align: right
      +above('m')
        top: remify(21px)
        right: 43%
        font-size remify(96px)
        line-height remify(96px)

    &_cents
      position absolute;
      display inline-block
      font-size: remify(16px)
      height: auto
      line-height: remify(22px)
      text-align: left
      +above('m')
        top: remify(26px)
        left: 57%
        font-size: remify(48px)
        line-height: remify(48px)

    &_suffix
      position absolute;
      display block
      height auto
      font-size remify(11px)
      line-height remify(11px)
      text-align left
      +above('m')
        top: remify(80px)
        left: 59%
        font-size remify(24px)
        line-height remify(24px)

