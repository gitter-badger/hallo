oi-price
  display block
  position relative

.oi-price
  color inherit
  display block
  height remify(44px)
  +above('m')
    height remify(56px)

  &_prefix
    display none
    font-family $fontTextRegular

  &_value
    font-family $fontTitle
    text-align center
    transition: color 0.3s ease

    &_integer
      display inline-block
      font-size remify(35px)
      height remify(44px)
      line-height remify(44px)
      +above('m')
        font-size remify(75px)
        height remify(56px)
        line-height remify(56px)

    &_cents
      display inline-block
      font-size remify(17.5px)
      height remify(22px)
      line-height remify(22px)
      transform translateY(remify(-10px))
      +above('m')
        font-size remify(37.5px)
        height remify(28px)
        line-height remify(28px)
        transform translateY(remify(-27px))

  &_suffix
    display block
    font-family $fontTitle
    font-size remify(8.5px)
    height remify(22px)
    line-height remify(22px)
    margin-top remify(-25px)
    text-align center
    text-indent remify(30px)
    transition: color 0.3s ease
    +above('m')
      text-indent remify(70px)
      font-size remify(19px)

    span
      display none
      +above('m')
        display inline
