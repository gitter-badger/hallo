oi-hero
  display none
  background green
  height remify(820px)
  height s("calc(100vh - 70px)")
  width 100%
  position absolute
  top remify(70px)
  left 0
  transition all 1s ease
  box-shadow 0 0 remify(100px) remify(100px) rgba(0,0,0,1)
  +above('m')
    display block

  &.show-shaddow
    box-shadow 0 0 0 remify(350px) rgba(0,0,0,1)
  &.hide-shaddow
    box-shadow 0 0 0 remify(350px) rgba(0,0,0,0)

.oi-hero
  display: none
  +above('m')
    display: block
    height 100%
    background-color $green
    z-index 1

  &_image
    width 100%
    height 100%
    background-repeat no-repeat
    background-position top center
    background-size cover
    box-shadow inset 0px -40px 40px #000
