oi-hero
  display none
  background green
  height remify(820px)
  height s("calc(100vh - 70px)")
  width 100%
  position absolute
  top remify(70px)
  left 0
  +above('m')
    display block

.oi-hero
  display: none
  +above('m')
    display: block
    height 100%
    background-color $green
    z-index 1

  &_image
    width 100%
    height 100%
    background-repeat no-repeat
    background-position top center
    background-size cover
