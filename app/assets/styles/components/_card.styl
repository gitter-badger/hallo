oi-card
  display block
  position relative

.oi-card
  background-color $white
  border remify(1px) solid $grayLight
  display block
  padding remify(17px)
  text-decoration none
  font-family $fontTextRegular
  color $black
  +above('m')
    padding remify(30px) remify(35px)
  &:hover
    color $green
    .oi-card_list
      color inherit

  &_header
    color inherit

  &_title
    display block
    font-family $fontTextLight
    font-size remify(18px)
    text-align center
    transition: color 0.3s ease
    +above('m')
      color $green
      font-size remify(21px)

  &_subtitle
    display none
    text-align center
    font-size remify(16px)
    padding-bottom remify(30px)
    border-bottom remify(1px) solid $grayLight
    max-width remify(180px)
    margin remify(15px) auto remify(40px) auto
    transition: color 0.3s ease

    +above('m')
      display block

    li
      display inline-block

  &_main
    display block

  &_list
    color $gray
    display none
    font-size remify(13px)
    max-width remify(180px)
    margin 0 auto
    transition: color 0.3s ease
    +above('m')
      display block
    +above('l')
      color $black
    &_title
      margin-bottom remify(10px)
      line-height remify(30px)
    &_items
      line-height remify(30px)

  &_footer
    display none
    margin-top remify(70px)
    width 100%
    +above('m')
      display block

    button, a
      background-color $white
      border 1px solid inherit
      border-radius remify(2px)
      color inherit
      cursor pointer
      display block
      font-size remify(16px)
      height remify(50px)
      line-height remify(50px)
      margin 0
      padding 0
      text-align center
      width 100%
      transition: all 0.3s ease

  oi-price
    color inherit
    +above('m')
      margin-bottom remify(40px)

