oi-card
  display block
  position relative

.oi-card
  background-color $white
  border remify(1px) solid $grayLight
  display block
  text-decoration none
  font-family $fontTextRegular
  color $black
  overflow hidden
  transition all 0.3s ease
  &:hover, &.active
    color $green
    .oi-card_list
      color inherit

  &_header
    color inherit
    background-color $white
    // background-color red
    position relative
    z-index 3
    overflow hidden
    border-bottom remify(1px) solid $grayLight
    margin 0 auto
    min-width 100%
    transition all 0.3s ease
    +above('m')
      padding remify(30px) 0
      max-width remify(180px)
      min-width remify(180px)

  &_title
    display block
    font-family $fontTextLight
    font-size remify(18px)
    text-align center
    transition color 0.3s ease
    text-transform capitalize
    +above('m')
      color $green
      font-size remify(21px)
      line-height remify(70px)
      height remify(70px)

  &_subtitle
    display none
    text-align center
    font-size remify(16px)
    margin 0 auto
    transition color 0.3s ease

    +above('m')
      display block

    li
      display inline-block

  &_main
    display block
    position relative
    z-index 1
    margin 0 auto
    overflow hidden
    +above('m')
      // padding remify(30px) 0
      max-width remify(180px)

    &_price
      height remify(44px)
      +above('m')
        height remify(80px)
        margin-top remify(30px)

  &_list
    color $gray
    display none
    font-size remify(13px)
    max-width remify(180px)
    margin 0 auto
    transition color 0.3s ease
    +above('m')
      display block
      margin-bottom remify(30px)
    +above('l')
      color $black
    &_title
      margin-bottom remify(10px)
      line-height remify(30px)
    &_items
      line-height remify(30px)

    li
      white-space nowrap
      height remify(32px)

  &_footer
    display none
    width 100%
    position relative
    z-index 2
    overflow hidden
    padding 0 remify(35px)
    +above('m')
      display block

    button, a
      background-color $white
      border 1px solid inherit
      border-radius remify(2px)
      color inherit
      cursor pointer
      display block
      font-size remify(16px)
      height remify(50px)
      line-height remify(50px)
      margin remify(35px) auto
      padding 0
      text-align center
      width 100%
      transition all 0.3s ease

  oi-price
    color inherit
    +above('m')
      margin-bottom remify(40px)

