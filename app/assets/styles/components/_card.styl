.card
  background $white
  border remify(1px) solid $grayLight
  padding-top remify(24px)
  position relative
  text-align center
  width remify(392px)
  display inline-block
  float left
  +below(415px)
    padding-bottom remify(20px)
  +above(415px)
    height remify(407px)
  +above(767px)
    height remify(587px)

  & + .card
    border-left 0

  &-title
    @extend $headline-small
    color: $green
    +below(415px)
      color: $black
    +above(415px)
      margin-bottom remify(5px)
    +above(767px)
      margin-bottom remify(11px)

  &-list-subtitle
    @extend $headline-small
    border-bottom remify(1px) solid $grayLight
    padding-bottom remify(22px)
    width remify(210px)
    +below(415px)
      display none
    +below(600px)
      width 100%
    +above(415px)
      font-size remify(15px)
      margin 0 auto remify(20px) auto
      padding-bottom remify(25px)
    +above(767px)
      font-size remify(21px)
      margin 0 auto remify(37px) auto
      padding-bottom remify(22px)
    li
      circleSeparator(6px, 3px, 8px)
      display inline-block

  // @todo: buggy in container width
  &-price > div
      +above(415px)
        transform translateX(remify(16px))
        margin-bottom remify(6px)
      +above(767px)
        transform translateX(remify(32px))
        margin-bottom remify(16px)

  &-info
    @extend $text-small
    color $gray
    margin 0 auto remify(25px) auto
    width remify(160px)
    +below(415px)
      display none
    +below(500px)
      width 100%
    +above(415px)
      display block

  &-list
    @extend $line-height-big
    @extend $text-small
    color $black
    text-align left
    display none
    +above(767px)
      display block
      padding-left remify(80px)
    +above(1023px)
      padding-left remify(117px)

  &-action
    @extend $button-regular
    +below(415px)
      display none
    +below(480px)
      font-size remify(12px)
    +below(540px)
      width s('calc(100% - %s)', remify(12px) * 2 )
      absoluteBottomLeft(remify(30px), remify(12px))
    +below(640px)
      width s('calc(100% - %s)', remify(22px) * 2 )
      absoluteBottomLeft(remify(30px), remify(22px))
    +above(415px)
      absoluteBottomLeft(remify(30px), remify(38px))
      width s('calc(100% - %s)', remify(38px) * 2 )
    +above(767px)
      absoluteBottomLeft(remify(30px), remify(30px))
      width s('calc(100% - %s)', remify(30px) * 2 )
