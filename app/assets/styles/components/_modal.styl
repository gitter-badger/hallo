channel-modal
  display block

.channel-modal
  background-color $green
  background-image linear-gradient(0deg,#47b969,#00a596)
  position fixed
  top 0
  left 0
  z-index 3
  width 100%
  height 100vh
  overflow scroll
  overflow-x hidden
  font-family $fontTextRegular
  +above('m')
    width 100vw

  &.indisponible
    filter grayscale(1)
    .channel-modal_indisponible
      opacity 1
    .channel-modal_content
      opacity .8

  &.has-image
    background-color #000
    background-image none
    .channel-modal_image
      opacity 1

  &_indisponible
    position absolute
    z-index 3
    left 0
    width 100%
    opacity 0
    top remify(80px)
    text-align center
    transition all 1s ease
    +above('l')
      top remify(60px)

    div
      font-family $fontTextRegular
      text-align center
      height remify(30px)
      font-size remify(16px)
      line-height remify(30px)
      margin 0
      background-color #000
      color $white
      display inline-block
      padding 0 remify(20px)
      +above('l')
        padding 0 remify(100px)
        margin 0 remify(100px)
        height remify(70px)
        line-height remify(70px)
        display block

  &_content
    font-family $fontTextRegular
    position relative
    z-index 2
    overflow hidden
    padding remify(30px) remify(20px)
    padding-top remify(140px)
    max-width remify(1170px)
    margin 0 auto
    +above('l')
      padding-top remify(140px)
      padding-left remify(100px)
      padding-right remify(100px)

    &_header
      +above('m')
        width 100%
        float left
      +above('l')
        width 40%
        height remify(310px)
        width 50%

    &_price
      margin-bottom remify(60px)
      +above('m')
        float left
        height remify(310px)
        padding-top remify(180px)
        margin-bottom 0
        width 53%
        margin-left 7%
      +above('l')
        width 43%

    &_actions
      width 100%
      text-align center
      transform translate(0, remify(-17px))
      display inline-block
      position relative
      +above('m')
        width 60%

      a
        background-color transparent
        border-radius remify(2px)
        height remify(50px)
        line-height remify(50px)
        text-align center
        color $white
        text-decoration none
        width 70%

        &.add-addon
          display inline-block
          border 1px solid $white
          // @todo rewrite
          +above('m')
            transform translate(150px, -83px)
          +above('l')
            transform translate(160px, -90px)

        &.rem-addon
          font-size remify(13px)
          position absolute
          top 40px
          left 15%

        // &.tel
        //   display block
        //   font-size remify(16px)
        //   +above('m')
        //     display inline-block
        //     transform translate(0, remify(-17px))
        //     font-size remify(13px)
        //     padding 0 remify(15px)
        //   +above('l')
        //     display none

  &_image
    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%
    background-color #000
    background-repeat no-repeat
    background-position top center
    transition opacity 0.5s ease
    opacity 0
    display none
    +above('m')
      display block

  &_close
    color $white
    position fixed
    top remify(30px)
    right remify(30px)
    width remify(30px)
    height remify(30px)
    cursor pointer
    overflow hidden
    text-indent remify(-999px)
    z-index 4
    svg
      display block
      width remify(30px)
      height remify(30px)
      line
        stroke $white

  &_logo
    height remify(120px)
    margin-bottom remify(60px)
    background-repeat no-repeat
    display none
    +above('m')
      display block

  &_name
    color $white
    font-size remify(47px)
    line-height remify(47px)
    font-family $fontTitle
    +above('m')
      font-size remify(57px)
      line-height remify(57px)

  &_channel
    color $white
    font-size remify(21px)
    line-height remify(21px)
    margin-bottom remify(50px)

  &_info
    color $white
    font-size remify(16px)
    line-height remify(30px)
    font-family $fontTextRegular
    width 100%
    +above('l')
      float left
      width 60%

    p
      color $white
      margin-bottom remify(40px)

    &_list
      margin-bottom remify(70px)
      h3
        display block
        margin-bottom remify(50px)
      ul
        display block
        overflow hidden
      li
        background-position left center
        background-repeat no-repeat
        border-bottom remify(1.2px) dashed $grayLight
        font-size remify(13px)
        height remify(60px)
        padding remify(10px)
        width 100%
        &:first-child
          border-top remify(1.2px) solid $grayLight
        &:nth-child(0n+2)
          +above('m')
            border-top remify(1.2px) solid $grayLight
        &:last-child
          border-bottom remify(1.2px) solid $grayLight
        &:nth-last-child(2)
          +above('m')
            border-bottom remify(1.2px) solid $grayLight
        +above('m')
          float left
          width 47%
          margin-right 3%
      span
        display block
        line-height remify(20px)
        text-align right

  &_disponible
    color $white
    width 100%
    +above('l')
      float left
      width 33%
      margin-left 7%

    &_title
      color $white
      margin-bottom remify(30px)

    &_list
      color $white
      margin-bottom remify(60px)
      ul
        color $white
      li
        color $white
        display block
        line-height remify(30px)
      a
        color $white
        text-decoration none
        border-bottom remify(1.2px) solid $grayLight
        &:hover, &:active, &:focus
          color $purple
          border-color $purple

  &_action
    color $white
    width 100%
    +above('l')
      float left
      width 33%
      margin-left 7%

    &_title
      color $white
      margin-bottom remify(30px)

    &_link
      color $white
      a
        color $white

  .oi-price
    display none
    transform scale(.8)
    color $white
    width 40%
    // @todo rewrite
    transform translate(0px, remify(-30px)) scale(.62)
    overflow hidden
    height remify(108px)
    width remify(240px)
    +above('m')
      display inline-block
    &_suffix
      margin -80px 0 0 140px




.modal
  position: fixed
  top: 0
  left: 0
  display: block
  width: 100%
  height: 100%
  background-color: $white
  z-index: 9999
  +below('xs')
    overflow-y auto

.modal_close
  position fixed
  top remify(30px)
  right remify(30px)
  display block
  width remify(27px)
  height remify(27px)
  background-image url(/assets/images/icons/close.svg)
  background-size contain
  background-color transparent
  background-repeat no-repeat
  border none
  text-indent 333%
  overflow hidden
  cursor pointer
  +below('xs')
    top remify(20px)
    right remify(20px)
    width remify(16px)
    height remify(16px)



.modal_header_logo
  position absolute
  top remify(100px)
  left remify(98px)
  display block
  width remify(67px)
  height remify(70px)
  background-image url(/assets/images/oi/oi-logo.svg)
  background-size auto
  background-color transparent
  background-repeat no-repeat
  +below('xs')
    top remify(15px)
    left remify(20px)
    width remify(52px)
    height remify(55px)

.modal_header_title
  @extend $title-medium
  position absolute
  top remify(215px)
  left 0
  width 100%
  padding 0 remify(40px) 0 remify(86px)
  letter-spacing -0.046em
  line-height 0.98em
  color $white
  +below('xs')
    position relative
    top 0
    font-size remify(42px)
    padding remify(98px) remify(20px) remify(20px) remify(20px)

.modal_container
  padding remify(215px) 0
  width 79%
  margin 0 auto
  +below('xs')
    width 100%
    padding remify(68px) remify(20px)

.modal_container_row
  @extend .clearfix
  h4
    font-size remify(30px)
    font-family $fontTextLight
    padding remify(10px) 0 remify(20px) 0
  h5
    font-family $fontTextBold
    padding remify(70px) 0 remify(20px) 0
  ul
    li
      color $gray
      list-style decimal
      margin-left remify(26px)
      padding-left remify(10px)
      padding-bottom remify(30px)
      &:last-child
        padding-bottom 0
      p
        color $black
  a
    color $green
    text-decoration none
    &:hover
      color $purple
      border-bottom: remify(1px) solid $purple;
    
.modal-contratos
  font-size remify(13px)
  color $gray
  hr
    width remify(125px)
    border none
    border-bottom remify(1px) solid $gray
    margin remify(70px) 0 remify(40px) 0
  a
    display block
    color $gray
    text-decoration underline
    &:hover
      color $gray
      border none
  p
    margin-top remify(20px)

.modal_column-left
  top 0
  left 0
  +below('xs')
    position: relative
    width 100%
    height auto
    padding-bottom remify(20px)
  +above('xs')
    position fixed
    width 33.3%
    height 100vh



.modal_column-right
  position fixed
  top 0
  left 33.3%
  width 66.7%
  height 100vh
  overflow-y auto
  overflow-x hidden
  +below('xs')
    position relative
    top 0
    left 0
    width 100%
    height auto



.modal_container_half-left
  @extends .clearfix
  width: 50%
  float: left
  padding-right remify(15px)
  +below('xs')
    width 100%
    padding-right 0
    padding-bottom remify(20px)

.modal_container_half-right
  @extends .clearfix
  width: 50%
  float: left
  padding-left remify(15px)
  +below('xs')
    width 100%
    padding-left 0
    padding-bottom remify(20px)




.modal-green
  .modal_column-left
    @extend .gradient-animate-green
  .modal_close
    background-image url(/assets/images/icons/close-gray.svg)

