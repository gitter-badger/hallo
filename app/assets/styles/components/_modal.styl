channel-modal
  display block

.channel-modal
  background-color $green
  background-image linear-gradient(0deg,#47b969,#00a596)
  display none
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index 3
  transition all 1s ease

  &.indisponible
    filter grayscale(1)
    .channel-modal_indisponible
      display block
    .channel-modal_content
      opacity .8

  &.has-image
    .channel-modal_image
      opacity 1

  &_indisponible
    position absolute
    z-index 3
    top remify(20px)
    left 0
    width 100%
    display none
    div
      font-family $fontTextRegular
      text-align center
      height remify(70px)
      font-size remify(16px)
      line-height remify(70px)
      margin 0 remify(100px)
      background-color #000
      color $white

  &_content
    font-family $fontTextRegular
    padding-left remify(100px)
    padding-right remify(100px)
    padding-top remify(140px)
    position relative
    z-index 2
    overflow hidden


  &_image
    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%
    background-color #000
    background-repeat no-repeat
    background-position top center
    transition opacity 0.5s ease
    opacity 0

  &_close
    color $white
    position absolute
    top remify(30px)
    right remify(30px)
    background-image url('/assets/images/icons/close.svg')
    background-size contain
    width remify(30px)
    height remify(30px)
    cursor pointer
    overflow hidden
    text-indent remify(-999px)
    z-index 4

  &_logo
    height remify(120px)
    margin-bottom remify(60px)
    background-repeat no-repeat

  &_name
    color $white
    font-size remify(57px)
    line-height remify(57px)
    height remify(60px)
    font-family $fontTitle

  &_channel
    color $white
    font-size remify(21px)
    line-height remify(21px)
    margin-bottom remify(50px)

  &_info
    color $white
    font-size remify(16px)
    line-height remify(30px)
    +above('l')
      float left
      width remify(660px)
    p
      color $white
      margin-bottom remify(40px)

  &_disponible
    color $white
    +above('l')
      float left
      width remify(280px)
      margin-left remify(240px)

    &_title
      color $white
      margin-bottom remify(30px)

    &_list
      color $white
      margin-bottom remify(60px)
      ul
        color $white
      li
        color $white
        line-height remify(30px)
      a
        color $white

  &_action
    color $white
    +above('l')
      float left
      width remify(280px)
      margin-left remify(240px)

    &_title
      color $white
      margin-bottom remify(30px)

    &_link
      color $white
      a
        color $white
