.menu
  @extend $text-regular
.menu
  overflow hidden
  position relative
  z-index 2
  +below(415px)
    center(100%)
    height remify(90px)
    // line-height remify(90px)
  +above(415px)
    center(724px)
    // line-height remify(70px)
    height remify(70px)
  +above(767px)
    center(1200px)

  ul
    overflow hidden
    width 100%
    float left
    +below(415px)
      height remify(90px)
    +above(415px)
      height remify(70px)

  li
    display block
    float left
    +below(415px)
      margin 0 remify(15px)
    +above(415px)
      margin 0 remify(15px) 0 remify(10px)

  a
    display block
    color $white
    text-decoration none
    +below(415px)
      font-size remify(21px)
      line-height remify(90px)
    +above(415px)
      line-height remify(70px)

  .products
    +below(415px)
      max-width remify(90px)

  .home
    margin 0 remify(10px)
    +below(415px)
      width remify(75px)
      height remify(90px)
    +above(415px)
      width remify(65px)
      height remify(65px)

    svg
      display inline-block
      +below(415px)
        square( remify(60px) )
        margin remify(15px) 0 0 remify(13px)
      +above(415px)
        square( remify(50px) )
        margin remify(10px) 0 0 remify(4px)

  .search
    +below(415px)
      size( remify(45px), remify(90px) )
      float right
      text-align right

    svg
      square( remify(12px) )
      display inline-block
      margin 0 remify(5px) remify(1px) remify(4px)
      +below(415px)
        square( remify(16px) )
        margin 0 remify(10px) 0 0
      path
        fill $white


