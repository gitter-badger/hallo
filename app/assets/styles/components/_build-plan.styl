$buildplan-height-s = 50px
$buildplan-padding-s = 10px
$buildplan-content-height-s = $buildplan-height-s - $buildplan-padding-s * 2

$buildplan-height-m = 70px
$buildplan-padding-m = 15px
$buildplan-content-height-m = $buildplan-height-m - $buildplan-padding-m * 2

build-plan
  display block
  position relative
  z-index 2

.build-plan
  @extend $text-small
  background $white
  color $black
  display block
  height remify($buildplan-height-s)
  padding remify($buildplan-padding-s) 0
  text-align center
  text-decoration none
  vertical-align -webkit-baseline-middle
  +above('m')
    font-size remify(16px)
    padding remify($buildplan-padding-m) 0
    height remify($buildplan-height-m)

  @keyframes build-plan-text-s
    0%
      width 0
      opacity 0
    100%
      opacity 1
      width remify(176px + 15px)

  @keyframes build-plan-text-m
    0%
      width 0
      opacity 0
    100%
      opacity 1
      width remify(217px + 30px)

  &_text
    animation-count 1
    animation-delay 1s
    animation-duration 700ms
    animation-fill-mode forwards
    animation-name build-plan-text-s
    display none
    line-height remify($buildplan-content-height-s)
    position relative
    text-align left
    transition-timing-function ease-out
    vertical-align top
    white-space nowrap
    width 0
    opacity 0
    z-index 1
    +above('m')
      animation-name build-plan-text-m
      line-height remify($buildplan-content-height-m)
      display inline-block

  &_icons
    background $white
    border 1px solid $black
    display inline-block
    height remify($buildplan-content-height-s)
    padding 0 remify(7px)
    position relative
    z-index 2
    +above('m')
      height remify($buildplan-content-height-m)

    li
      border 1px solid $white
      display block
      float left
      height remify($buildplan-content-height-s)
      margin -1px 0 0 0
      text-align center
      background right
      width remify(36px)
      +above('m')
        height remify($buildplan-content-height-m)

    svg
      display inline-block
      height remify(24px)
      margin-top remify(2px)
      +above('m')
        margin-top remify(6px)

  &_action
    display inline-block
    margin-left remify(15px)
    vertical-align top
    border-radius remify(4px)
    border remify(1px) solid $black
    line-height remify($buildplan-content-height-s)
    height remify($buildplan-content-height-s)
    padding 0 remify(30px)
    +above('m')
      margin-left remify(30px)
      line-height remify($buildplan-content-height-m)
      height remify($buildplan-content-height-m)
      padding 0 remify(15px)

    &:hover, &:active, &:focus
      color $purple
      border-color $purple
      outline none

    & > span
      display none
      +above('m')
        display inline
