footer
  @extend $text-regular

  nav.footer-products
    @extend $line-height-big
    color $black
    +above(415px)
      center(704px)
    +above(767px)
      center( 960px )
      padding-top remify(59px)
    +above(1023px)
      center( 1170px )
      padding-top remify(70px)

    ul
      overflow hidden

    li.footer-group
      +above(415px)
        column(1/3, 0, 3)
        margin-top remify(70px)
      +above(767px)
        column(1/5, 0, 5, 3)
        margin-top 0

      ul
        margin-top remify(19px)
    a
      text-decoration none
      color $black

  nav.footer-oi
    background-color $purple
    height remify(70px)
    line-height remify(70px)
    margin-top remify(90px)
    overflow hidden
    ul
      center( remify(1366px) )
      +above(767px)
        padding 0 remify(20px)
      +above(1023px)
        padding 0 remify(90px)
    li
      display inline-block
      float left
      font-size remify( 16px)
      margin-right remify( 9px)
      padding 0 remify( 10px)
    .home
      margin 0 remify( 10px) 0 0
      padding 0
      width remify(65px)
      a
        color transparent
        // background-image url(/assets/images/oi/oi-logo.svg)
        // background-position remify(4px) remify(12px)
        // background-repeat no-repeat
        // background-size remify(50px)
        // font-size remify( 21px)
        // line-height remify( 94px)
        // text-indent remify( 10px)
    .search-az
      float right
      margin 0
    a
      size(100%, 100%)
      color $white
      display block
      text-decoration none

