.oi-footer
  &_products
    max-width remify(1170px)
    margin remify(25px) auto

    ul
      overflow hidden

    &_category
      display block
      padding 0 remify(20px)
      +above('m')
        width (100% / 3)
        float left
        padding-right 0
      +above('l')
        width (100% / 5)
        margin-bottom remify(60px)

      &_title
        font-family $fontTextBold
        height remify(55px)
        line-height remify(55px)

    &_subcategory
      display none
      margin-bottom remify(30px)
      +above('m')
        display block
      li
        display block
      a
        display block
        text-decoration none
        color $black
        line-height remify(30px)

