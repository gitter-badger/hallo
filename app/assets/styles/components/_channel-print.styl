// print-modal

channel-print
    display block

.channel-print
    background $white
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    z-index 3
    overflow auto
    @media print
      position relative
      overflow visible

    &_close
        width remify(30px)
        height remify(30px)
        position fixed
        top remify(30px)
        right remify(30px)
        overflow hidden
        z-index 3
        @media print
          display none
        svg
            display block
            width remify(30px)
            height remify(30px)
            line
                stroke $grayLight
    
    &_print
        position fixed
        top remify(94px)
        right remify(83px)
        z-index 4
        @media print
          display none
        &_bt-print
            height remify(52px)
            width remify(152px)
            color $black
            border remify(1px) solid $black
            border-radius remify(3px)
            font-family $fontTextRegular
            font-size remify(16px)
            background-color $white
            cursor pointer

    

    &_results
        display block
        height 65%
        background-color $white
        +above('m')
            height 100%
            width 90%
            margin auto
        h2
            font-family $fontTitle
            font-size remify(38px)
            padding-top remify(84px)
            line-height remify(70px) 
            img
                float left
                margin-right remify(80px)

    &_list
        clear left
        display block
        overflow hidden
        min-height remify(60px)
        border-top remify(1px) solid #222222
        margin-top remify(78px)

        &_item
            display block
            height remify(60px)
            line-height remify(60px)
            font-family $fontTextRegular
            font-size remify(13px)
            width 33.33%
            max-width remify(706px)
            float left
            border-right remify(1px) solid #d6d6d6
            position relative
            @media print
                width 33%
                margin-right remify(1px)
            &:nth-child(3n)
                border-right none
                
            &:nth-child(6n+1)
                svg
                    display none
                    
            &:nth-child(6n+2)
                svg
                    display none
                    
            &:nth-child(6n+3)
                svg
                    display none
                
            svg
                position absolute
                top 0
                left 0
         
        &_type
            display block
            float left
            width remify(90px)
            height remify(60px)
            padding-top remify(15px)
            text-align center
            position relative
            z-index 2

            &_img
                display block
                height remify(30px)
                border none
                margin auto


        &_name
            display block
            float left
            height remify(60px)
            margin-left remify(20px)
            position relative
            z-index 2
            @media print
                display table-cell
                line-height normal
                width remify(80px)
                padding-top remify(22px)
                margin-right remify(-10px)
            
        &_number
            display block
            float left
            height remify(60px)
            width remify(80px)
            text-align center
            position relative
            z-index 2
            @media print
              width remify(20px)
            
