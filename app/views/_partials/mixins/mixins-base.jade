//- mixin to create page heading
mixin createMeta(pageInfo)
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible" content="IE=edge")
	meta(name="viewport",content="width=device-width,initial-scale=1")
	meta(name="author", content="Oi Internet")

	//- inserting description
	if pageInfo.description
		meta(name="description", content=pageInfo.description)
	else
		meta(name="description", content="Oi Internet")

	//- inserting keywords
	if pageInfo.keywords
		meta(name="keywords",content=pageInfo.keywords)
	else
		meta(name="keywords",content="Oi Internet")

	link(rel="author", href="/humans.txt")


mixin createHead(title, pageInfo)
	head
		+createMeta(pageInfo)
		title= title
			
