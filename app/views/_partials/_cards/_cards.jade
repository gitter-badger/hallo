mixin cardsInternet()
  .cards
    .cards_container
      .cards_container_box
        each card in cardsInternet.data
          - console.log(card.title, card.list.items.length);
          oi-card
            a(href="#" data-slug=card.slug class="oi-card "+ (card.active == 1 ? 'active': '') )
              .oi-card_header
                h2.oi-card_header_title #{card.title}

              .oi-card_content

                if (card.image)
                  .oi-card_content_image
                    img(src="#{cardsImagesDirectory}/#{card.image}")

                .oi-card_content_list
                  if (card.list.title)
                    h5.oi-card_content_list_title #{card.list.title}
                  if (card.list.items.length > 0)
                    ul.oi-card_content_list_items
                      each item in card.list.items
                        li=item

                .oi-card_content_footer
                  if (card.action)
                    button.oi-card_content_footer_action #{card.action}
