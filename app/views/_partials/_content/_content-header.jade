mixin contentHeader(config)
  header.content_header
    .content_header_list
      if config.title
        h2=config.title
      if config.list_title
        ul#cart-list
        each item in list_title
          li=item
    .content_header_sidewalk
      if config.price
        .content_header_price
          oi-price
      if config.price
        .content_header_price
          oi-price(id=config.price.id price=config.price.value small=config.price.small)
      if config.action
        .content_header_action
          a(href="#").button.filled=config.action
